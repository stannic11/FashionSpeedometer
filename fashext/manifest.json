{
  "name": "Fashion Speedometer",
  "version": "1.0",
  "description": "Check your sustainability.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/fs16.png",
      "32": "images/fs32.png",
      "48": "images/fs48.png",
      "128": "images/fs128.png"
    }
  },
  "icons": {
    "16": "images/fs16.png",
    "32": "images/fs32.png",
    "48": "images/fs48.png",
    "128": "images/fs128.png"
  },
  "manifest_version": 2
}
